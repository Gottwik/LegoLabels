<div class="panel green" ng-controller="control_controller">
	<div class="panel-body">

			<div class="card color1 search_bar_card">
				<div class="card-body">
					<h1>1. Add Parts</h1>
					<input type="text" class="huge search_box" placeholder="Input part number (3002)" ng-model="searchtext" />
					<div class="results light" ng-show="searchtext">

						<div class="loader" ng-show="loading">{{>loader}}</div>
						<div class="no_part" ng-show="no_part">No part found</div>

						<div class="result row" ng-show="found_part.name">
							<div class="col col-md-4">
								<div class="result_image" style="background-image: url('\{{found_part.part_img_url}}')"></div>
							</div>
							<div class="col col-md-8">
								<div class="result_category">\{{found_part.category}}</div>
								<div class="result_name">\{{found_part.name}}</div>
							</div>
						</div>

						<div class="fixed_controls">
							<button class="btn " ng-click="add_part()">Add part</button>
						</div>

					</div>
				</div>
				<div class="card-next"><i class="fa fa-share"></i></div>
			</div>

			<div class="card color2 print_chooser_card">
				<div class="card-body">
					<h1>2. Setup labels</h1>

					<div class="control_row">
						<div class="grouped_btn">
							<label class="select">
								<span class="label">Label setup</span>
								<select>
									<option ng-repeat="setup in label_setups">\{{setup.label_setup.name}}</option>
								</select>
							</label>
							<button class="btn" ng-click="open_label_setup_editor()"><i class="fa fa-cog"></i></button>
						</div>
					</div>
				</div>
				<div class="card-next"><i class="fa fa-share"></i></div>
			</div>

			<div class="card color3 print_labels_card">
				<div class="card-body">
					<h1>3. Print labels</h1>
					<button ng-class="{'disabled': get_selected_part_count() == 0}" class="btn" ng-click="print_labels()">Print \{{get_selected_part_count()}} labels</button>
				</div>
			</div>

			<div class="clearfix"></div>

	</div>

</div>